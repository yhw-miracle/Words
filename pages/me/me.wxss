/* pages/me/me.wxss */
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.my_container {
    margin-top: 98rpx;
    width: 100%;
}

.item {
    display: flex;
    flex-direction: row;
    height: 88rpx;
    width: 100%;
    background-color: #fff;
    border-bottom: 1rpx solid #E5E5E5;
}

.menu_text {
    margin-left: 32rpx;
    line-height: 88rpx;
    font-family: PingFang SC;
    font-size: 34rpx;
    color: #000;
}

.icon {
    margin-top: 30rpx;
    margin-left: 38rpx;
    width: 40rpx;
    height: 40rpx;
}